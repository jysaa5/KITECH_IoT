<?xml version="1.0" encoding="UTF-8"?>
<!-- mybatis -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kite.mm.guest.dao.GuestDao">

	<!-- //////////////삽입/////////////// -->
	<insert id="insertArticle" parameterType="com.kite.mm.guest.domain.WriteRequest" useGeneratedKeys="true" keyProperty="idx">

		insert into GUESTBOOK (memberid, title, content) values(#{writer}, #{title}, #{content})

	</insert>


	<!-- 컬럼값과 domain의 필드명이 다를때 설정해줘야 됨. -->
	<resultMap type="com.kite.mm.guest.domain.GuestArticleVo" id="guestArticle">
		<id property="idx" column="idx" />
		<result property="writer" column="memberid" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="regdate" column="regdate" />
	</resultMap>


	<!-- //////////////조회/////////////// -->
	<!-- 조회: 페이지의 게시글 리스트를 보여줄 때, 페이징 하는 조회 -->
	<!-- startRow(시작하는 번호), count(보여질 개수)가 들어오는데, 이 데이터들의 값의 순서를 알 수 없기 때문에 
		param1, param2라고 한 것이다. -->
	<select id="selectArticleList" resultMap="guestArticle">

		select * from GUESTBOOK limit #{param1}, #{param2}

	</select>

	<!-- 조회: 전체 행의 갯수를 가져오는 조회 -->
	<!-- integer의 별칭: int -->
	<select id="selectCount" resultType="int">
	
		select count(*) from GUESTBOOK
		
	</select>

	<!--조회: idx값을 전달해서 조회 -->
	<select id="selectGuestByIdx" resultMap="guestArticle">
	
		select * from GUESTBOOK where idx=#{idx}
	
	</select>

	<!-- //////////////수정/////////////// -->
	<!--수정: idx값을 전달해서 수정 -->
	<update id="editArticle" parameterType="com.kite.mm.guest.domain.WriteRequest">

		update GUESTBOOK set title = #{title}, content=#{content}, editdate = now() where idx=#{idx}
		
	</update>
	
	<!-- //////////////삭제/////////////// -->
	<delete id="deleteArticle" parameterType="com.kite.mm.guest.domain.WriteRequest"> 
	
	delete from GUESTBOOK where idx=#{idx}
	
	</delete>
	

</mapper>